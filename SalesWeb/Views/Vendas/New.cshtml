@model SalesWeb.Models.ViewModel.VendaFormViewModel

@{
    ViewData["Title"] = "Nova venda";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div class="form-group">
                <label asp-for="Venda.Data" class="control-label"></label>
                <input asp-for="Venda.Data" class="form-control" />
                <span asp-validation-for="Venda.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venda.VendedorId" class="control-label"></label>
                <select asp-for="Venda.VendedorId" asp-items="@(new SelectList(Model.Vendedores, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Venda.Valor" class="control-label"></label>
                <input asp-for="Venda.Valor" class="form-control" />
                <span asp-validation-for="Venda.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar&nbsp; <span class="glyphicon glyphicon-ok" aria-hidden="true"></span></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
