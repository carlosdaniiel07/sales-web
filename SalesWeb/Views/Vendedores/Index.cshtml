@model IEnumerable<SalesWeb.Models.Vendedor>

@{ ViewData["Title"] = "Vendedores"; }

<h2>@ViewData["Title"]</h2>

<p>
    <div class="form-group">
        <a asp-action="Create" class="btn btn-primary btn-sm">Novo&nbsp; <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
    </div>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Nascimento)</th>
            <th>@Html.DisplayNameFor(model => model.Departamento)</th>
            <th>@Html.DisplayNameFor(model => model.Salario)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.Nascimento)</td>
            <td>@Html.DisplayFor(modelItem => item.Departamento.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Salario)</td>
            <td>
                <div class="btn-group">
                    <a href="#" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Opções&nbsp; <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-action="Details" asp-route-id="@item.Id">Detalhes</a></li>
                        <li><a asp-action="Edit" asp-route-id="@item.Id">Editar</a></li>
                        <li><a asp-action="Delete" asp-route-id="@item.Id">Remover</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>