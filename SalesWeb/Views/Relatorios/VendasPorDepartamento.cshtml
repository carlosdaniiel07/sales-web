@model IEnumerable<SalesWeb.Models.Venda>

@{
    ViewData["Title"] = "Relatório de vendas por departamento";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-primary">
    <div class="panel-heading">Parâmetros</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <form>
                    <div class="form-group">
                        <label for="Departamento" class="control-label">Departamento</label>
                        <select id="Departamento" name="Departamento" asp-items="@ViewBag.Departamentos" class="form-control"></select>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary ">Buscar&nbsp; <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr class="bg-primary">
                <th>@Html.DisplayNameFor(model => model.Data)</th>
                <th>@Html.DisplayNameFor(model => model.Vendedor.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Valor)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Data)</td>
                    <td>@Html.DisplayFor(modelItem => item.Vendedor.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Valor)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                </tr>
            }
        </tbody>
    </table>

</div>